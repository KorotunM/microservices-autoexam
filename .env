# Настройки приложения/БД (пример, значения заменить на боевые)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/autoexam
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s %(levelname)s [%(name)s] %(message)s
# Порты сервисов (необязательно менять)
AUTH_PORT=8001
PROFILE_PORT=8002
FINANCE_PORT=8003
NOTIFICATION_PORT=8004
FRONTEND_PORT=8080
# JWT настройки (auth-service)
JWT_SECRET=change-me
JWT_TTL_SECONDS=3600
# URL валидации токена (profile-service вызывает auth-service)
AUTH_VALIDATE_URL=http://auth-service:8001/auth/validate
NOTIFICATION_URL=http://notification-service:8004/notify/log
LOGIN_TITLE=Вход в систему
REGISTER_TITLE=Создайте аккаунт
WELCOME_MESSAGE=Добро пожаловать в Autoexam
AUTH_BASE_URL=http://auth-service:8001
PROFILE_BASE_URL=http://profile-service:8002
FINANCE_BASE_URL=http://finance-service:8003
